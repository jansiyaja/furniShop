<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification</title>
    <link rel="stylesheet" href="/static/css/beautiful-theme.css">
    <style>
        .otpcard {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .card {
            width: 320px;
            padding: 20px;
            border-radius: 20px;
            background: #ffffff;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .alert-danger {
            display: flex;
            align-items: center;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .alert-danger svg {
            fill: #721c24;
            margin-right: 10px;
        }

        .mobile-text {
            color: #6c757d;
            font-size: 14px;
            margin-top: 10px;
            display: block;
        }

        .otp-input {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .otp-input input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            margin-right: 5px;
            font-size: 16px;
            max-width: 20px; /* Reduced input width */
        }

        .submit-btn {
            background-color: #007bff;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            margin-top: 15px; /* Adjusted margin */
        }

        .resend-link {
            font-weight: bold;
            color: #dc3545;
            cursor: pointer;
            margin-top: 15px;
            display: block;
        }

        .resend-link:hover {
            text-decoration: underline;
        }

        .time {
            font-size: 1rem;
            font-weight: bold;
            color: #333;
            margin-top: 10px;
            display: block;
        }
    </style>
</head>

<body>
    <div class="otpcard">
        <div class="card">
            <% if (locals.message) { %>
                <div class="alert alert-danger" role="alert">
                    
                    <div>
                        <strong>Hey !</strong>
                        <%= message %>
                    </div>
                </div>
            <% } %>
            <form id="verificationForm" onsubmit="return validate()" method="post" action="">
                <% if(locals.email) { %>
                    <input type="hidden" name="email" value="<%= email %>">
                <% } %>
                <h2 class="text-center mb-4">Email Verification</h2>
                <span class="mobile-text">Enter the code sent to your Email <b class="text-danger"> <%= locals.email %> </b></span>
                <div class="otp-input">
                    <input type="text" class="form-control" id="digit1" name="digit1" autofocus required>
                    <input type="text" class="form-control" id="digit2" name="digit2" required>
                    <input type="text" class="form-control" id="digit3" name="digit3" required>
                    <input type="text" class="form-control" id="digit4" name="digit4" required>
                    <input type="text" class="form-control" id="digit5" name="digit5" required>
                    <input type="text" class="form-control" id="digit6" name="digit6" required>
                </div>
                <button type="submit" class="submit-btn">Submit</button>
            </form>
            <span class="time text-center"></span>
            <div class="text-center">
                <span class="mobile-text">Don't receive the code?</span>
                <span class="font-weight-bold text-danger cursor resend-link" onclick="resend()">Resend</span>
                <% if (typeof message !== 'undefined') { %>
                  <% if (message =='OTP expired') { %>
                    <p style="color: red; text-align: center;">
                      <%= message %>
                    </p>
                  <% } %>
                <% } %>
              </div>
              
        </div>
    </div>
    <script>
        // Function to update the timer every second
        function updateTimer(duration, display) {
            let timer = duration;
            const timerInterval = setInterval(function () {
                const minutes = Math.floor(timer / 60);
                const seconds = timer % 60;

                display.textContent = `${minutes}:${seconds}`;

                if (--timer < 0) {
                    clearInterval(timerInterval);
                    // Handle timer expiration here if needed
                }
            }, 1000);
        }

        // Function to auto-focus on the next input field
        function focusNextInput(currentInput, nextInput) {
            if (currentInput.value.length === 1) {
                nextInput.focus();
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            const timerMinutes = 1; // Set your desired timer duration in minutes
            const display = document.querySelector('.time');
            const timerContainer = document.querySelector('.timer-container');
            updateTimer(timerMinutes * 60, display);

            const otpInputs = document.querySelectorAll('.otp-input input');

            otpInputs.forEach(function (input, index, inputs) {
                input.addEventListener('input', function () {
                    focusNextInput(input, inputs[index + 1]);
                });
            });

            const verificationForm = document.getElementById('verificationForm');
            verificationForm.addEventListener('submit', function () {
                // Hide the timer container after form submission
                timerContainer.style.display = 'none';
            });
        });

        function validate() {
            // Add your validation logic here
            return true; // Return true if validation passes, false otherwise
        }

        function resend() {
            // Add logic to resend the OTP
        }
    </script>
   
