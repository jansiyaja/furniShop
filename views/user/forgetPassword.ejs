<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'></link>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
      const submitButton = document.getElementById('newsletter-btn'); // Update this ID based on your HTML structure
  
      submitButton.addEventListener('click', function (event) {
        event.preventDefault();
  
        // Submit the form using AJAX
        $.ajax({
          url: '/forgot-password',
          method: 'POST',
          data: $('form').serialize(),
          success: function (response) {
            if (response.message === 'Reset password email sent successfully') {
              // Show SweetAlert for success
              Swal.fire({
                icon: 'success',
                title: 'Success',
                text: 'Reset password email sent successfully',
              }).then(() => {
               
                window.location.href = '/login';
              });
            } else {
              // Show SweetAlert for other responses
              Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to send reset password email',
              });
            }
          },
          error: function () {
            // Show SweetAlert for AJAX error
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'Internal Server Error',
            });
          },
        });
      });
    });
  </script>
  

    
