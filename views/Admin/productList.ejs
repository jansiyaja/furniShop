        <script>
         async function confirmAndHandleListButtonClick(productId, listedStatus) {
    console.log("iam ppror",productId, listedStatus);
    const action = listedStatus ? 'unlist' : 'list';
    const confirmationMessage = `Are you sure you want to ${action} this product?`;
    const userConfirmed = window.confirm(confirmationMessage);

    if (userConfirmed) {
        try {
            const backendURL = '/admin/listproduct';
            console.log('Sending payload:', JSON.stringify({ id: productId }));

            const response = await fetch(backendURL, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ id: productId }),
            });

            const data = await response.json();
            console.log('Success:', data);

            updateProductButtonStatus(productId, data);
            console.log("iam ",productId, data);
        } catch (error) {
            console.error('Error:', error);
            alert('Error occurred while processing the request. Please try again.');
        }
    } else {
        alert('Operation canceled.');
    }
}

function updateProductButtonStatus(productId, newListedStatus) {
    const button = document.getElementById('button-' + productId);

    if (button) {
        button.dataset.status = newListedStatus;
        button.textContent = newListedStatus ? 'Unlist' : 'List';
    }
}

