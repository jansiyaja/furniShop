<script>
    const existingCategories = []; // Maintain a list of existing categories
  
    function validateCategory() {
        console.log("cat");
      const nameInput = document.getElementById('name');
      const descriptionInput = document.getElementById('description');
      const lettersRegex = /^[A-Za-z ]+$/;
  
      // Reset previous error styles
      nameInput.classList.remove('error');
      descriptionInput.classList.remove('error');
  
      if (nameInput.value.trim() === '') {
        alertAndFocus(nameInput, 'Please fill in the category name properly and remove any blank spaces.');
        return false;
      } else if (!lettersRegex.test(nameInput.value)) {
        alertAndFocus(nameInput, 'Category name should contain only letters.');
        return false;
      } else if (descriptionInput.value.trim().length <= 10) {
        alertAndFocus(descriptionInput, 'Please enter a description with more than 10 characters.');
        return false;
      }
  
      // Check if the category name already exists
      console.log(existingCategories);
      const categoryName = nameInput.value.trim();
      if (existingCategories.includes(categoryName)) {
        alertAndFocus(nameInput, 'Category with this name already exists. Please choose a different name.');
        return false;
      }
  
      return true;
    }
  
    function alertAndFocus(inputElement, message) {
      alert(message);
      inputElement.classList.add('error');
      inputElement.focus();
    }
  </script>
  


  
  





    
