        <script>
            function changeStatus(select){
                let orderId = select.dataset.orderid;        
                      
                let productId = select.dataset.productid;
                let status = select.value;
                let userId = select.dataset.userid;
               
                const data ={
                    orderId,
                    productId,
                    status,
                    userId,
                    
                }
                console.log(data);
                $.ajax({
                    url:'/admin/changeOrderStatus',
                    method:'POST',
                    data:JSON.stringify(data),
                    contentType:'application/json',
                    success: function(response) {
    console.log('Response from server:', response);
    if (response.change == true) {
        $('#ReloadTable').load('/admin/singleOrder?orderId=<%= order._id %> #ReloadTable', function() {
           
        });
        location.reload()
    }
}
                })
            }
          </script>
            <script>
                function cancelOrder(orderId,productId){
                  console.log("hi");
                  const data = {orderId,productId}
                  Swal.fire({
                    icon:'warning',
                    text:'Are you sure',
                    showCancelButton:true,
                    confirmButtonText:'yes',
                    cancelButtonText:'no',
                    cancelButtonColor:'#d33',
                    confirmButtonColor:"#3085d6"
                  }).then((response)=>{
                    if(response.isConfirmed){
                      $.ajax({
                        url:"/admin/cancelOrder",
                        method:'POST',
                        data:JSON.stringify(data),
                        contentType:"application/json",
                        success:function(response){
                          if(response.cancel==true){
                            Swal.fire({
                              icon:'success',
                              text:'Your order cancelled'
                            })
                            $('#ReloadTable').load('/admin/singleOrderDetails?orderId=<%= order.orderId %> #ReloadTable')
                          }
                        }
                      })
                    }
                  })
                }
              </script>
              <script>
                function changeReturnStatus(select) {
                    let orderId = select.dataset.orderid;
                    let productId = select.dataset.productid;
                    let status = select.value;
                    let userId = select.dataset.userid;
                    let retunRerason = select.dataset.return;
                    
              
        
                    const data = {
                        orderId,
                        productId,
                        status,
                        userId,
                        retunRerason,
                    }
        console.log(data);
                    $.ajax({
                        url: '/admin/changeReturnStatus',
                        method: 'POST',
                        data: JSON.stringify(data),
                        contentType: 'application/json',
                        success: function (response) {
                            if (response.changed == true) {
                                $('#ReloadTable').load('/admin/singleOrderDetails?orderId=<%= order._id %> #ReloadTable')
                            }
                        }
