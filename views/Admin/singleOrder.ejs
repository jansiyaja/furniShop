                                                                                name="orderStatus" disabled
                                                                                onchange="changeStatus(this)">
                                                                                <option >change status</option>
                                                                                <option value="shipped">Shipped</option>
                                                                                <option value="outfordelivery">OutForDelivery</option>
                                                                                <option value="delivered">Delivered</option>
                                                                                
                                                                            </select>
                      
                                                                        <%} else if(el.status==='returnRequested') {%>
                                                                            <select  data-orderId="<%= order._id %>",data-ord-Id=" <%= order.orderId %>"
                                                                                data-productId="<%= el.productId._id%>"
                                                                                data-index="<%= i%>" data-userId="<%= order.userId._id%>" data-return=" <%= el. returnReason%>"
                                                                                class="form-select orderStatus" id="orderStatus"
                                                                                name="orderStatus"
                                                                                onchange=" changeReturnStatus(this)">
                                                                                <option >change status</option>
                                                                                <option value="returned">Accepted</option>
                                                                                <option value="returnDenied">Denied</option>
                                                                                <option value="delivered">Delivered</option>
                                                                                
                                                                            </select>
                      
                                                                        <%} 
                                                                        else {%>
                                                                            <select data-orderId="<%= order._id %>"
                                                                                data-productId="<%= el.productId._id%>"
                                                                                data-index="<%= i%>" data-userId="<%= order.userId._id%>"
                                                                                class="form-select orderStatus" id="orderStatus"
                                                                                name="orderStatus"
                                                                                onchange="changeStatus(this)">
                                                                                <option >change status</option>
                                                                                <option value="shipped">Shipped</option>
                                                                                <option value="outfordelivery">OutForDelivery</option>
                                                                                <option value="delivered">Delivered</option>
                                                                                
                                                                            </select>
                      
                                                                        <%}%>
                                                                       
                                                                        
                                                                      </td>
                                                                      <% if(el.status=='delivered') {%>
                                                                          <td><button class="btn-success" >Delivered</button></td>
                                                                          <%}else if(el.status=='cancelled'){%>
                                                                            <td><button class="btn-danger" >Cancelled</button></td>
                                                                            <%}else if(el.status=='returned'){%>
