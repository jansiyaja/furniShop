                            </div>
                          </div>

                          <%}%>
                  
                    
                    <div class="card mt-4">
                        <div class="table-data">
                            <div class="order">
                                
                                    <div class="table-responsive" id="reloadArea">
                                        <table id="tablePagination" class="table table-bordered table-hover table-striped">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th scope="col"><center>Sl.No.</center></th>
                                                    <th scope="col"><center>Name</center></th>
                                                    
                                                    <th scope="col"><center>DIscount</center></th>
                                                    <th scope="col"><center>Action</center></th>
                                                   
                                                </tr>
                                            </thead>
                                            <tbody>
                                               
                                              <% if(offers.length>0){ %>
                                                  <% if(offers.map((value,index)=>{ %>
                                                    <tr>
                                                        <td  class="text-center" ><%= index+1 %></td>
                                                        <td   class="text-center"><%= value.name%></td>
                                                        <td   class="text-center" ><%= value.offerPercentage %></td>
                                                        <td class="text-center"> 
                                                            <% if(String(categoryId.offer) === String(value._id)){ %>
                                                                <button class=" btn btn-danger" onclick="removeCategoryOffer('<%= value._id %>','<%= categoryId._id %>')">Remove</button>
                                                                 <%} else{%>
                                                                   
                                                               <button class="btn btn-warning"
                                                                   data-bs-toggle="modal"
                                                                   data-bs-target="#offerModal"
                                                                   onclick="applyCategoryOffer('<%= value._id %>','<%= categoryId._id %>')">
                                                                   Apply Offer
                                                               </button>
                                                               <%}%>
                                                        </td>
                                                       
                                                     

                                                      
                                                        
                                                    </tr>
                                                    <% })) %>
                                        <% } else{ %>
                                        
                                            </tbody>
