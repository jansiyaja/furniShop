    <script>
        function applyCategoryOffer(offerId,categoryId) {
            console.log("offer Aply");
            const data = {
              offerId:offerId,
              categoryId:categoryId
            }
            console.log(data);
            $.ajax({
                method:'post',
                url:'/admin/addCategoryOffer',
                data:data,
                success:function(response){
                 if(response.success){
                  location.reload()
                 }
                }
            })
        }
    </script>
     <script>
        function removeCategoryOffer(offerId,categoryId) {
            console.log("offer Aply");
            const data = {
              offerId:offerId,
              categoryId:categoryId
            }
            console.log(data);
            $.ajax({
                method:'post',
                url:'/admin/removeCategoryOffer',
                data:data,
                success:function(response){
                 if(response.success){
                  location.reload()
                 }
                }
            })
        }
    </script>  
